@model MedBrat.Areas.Appointment.ViewModels.TicketsFilterViewModel

<form class="m-3" method="get">
    <label>Имя: </label>
    <input type="search" class="me-3" name="name" value="@Model.SelectedName" />
          
    <label>Показать талоны: </label>
    <select class="me-3" name="timePeriod" asp-items="Model.TimePeriods"></select>
  
    <input class="me-3" type="submit" value="Фильтр" />
</form>
<div class="flex">
@foreach(var ticket in Model.Tickets)
{
    <div class="mb-3 me-3" style="border:solid 1px black">
    <div class="m-3">@ticket.Name</div>
    <div class="m-3">@ticket.Date.ToString("dd MMMM yyyy")</div>
    <div class="mx-3">@ticket.Date.ToString("HH:mm")</div>
    <div class="d-flex">
    @if (ticket.IsExpired)
    {
        <div class="mx-3 my-2" style="color:#b94a48">Просрочен</div>
    }
    <form class="nav-link" asp-area="Account" asp-controller="Record" asp-action="Patient" method="get"
    asp-route-id=@ticket.PatientId>
        <input type="submit" value="Открыть журнал" />
    </form>
    </div>
    </div>
}
</div>