@{
    ViewData["Title"] = "Вход";
}
@model MedBrat.Areas.Account.ViewModels.UserLoginViewModel

<style>
.field-validation-error {
    color: #b94a48;
}
  
input.input-validation-error {
    border: 1px solid #b94a48;
}
 
.validation-summary-errors {
    color: #b94a48;
}
</style>
<form method="post" asp-anti-forgery="true">
    <div asp-validation-summary="ModelOnly"></div>
        <p>
            <label asp-for="Polis"></label><br />
            <input type="text" asp-for="Polis" />
            <span asp-validation-for="Polis"></span>
        </p>
        <p>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </p>
        <p>
            <input type="submit" value="Send"  />
        </p>
</form>
<a asp-area="Account" asp-controller="Auth" asp-action="Registration">Зарегистрироваться</a>
 
@await Html.PartialAsync("_ValidationScriptsPartial")